{
  "name": "logger-demos",
  "version": "1.0.0",
  "description": "Demo applications for winston-multi-channel-logger",
  "scripts": {
    "setup": "cd client && pnpm install && cd ../server && pnpm install",
    "start:server": "cd server && pnpm start",
    "start:client": "cd client && pnpm dev",
    "start": "concurrently \"pnpm start:server\" \"pnpm start:client\"",
    "start:all": "./run.sh",
    "test:curl": "./curl-test.sh",
    "start:simple": "ts-node simple-integrated.ts"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "express": "^4.18.2"
  }
}
