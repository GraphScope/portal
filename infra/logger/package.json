{
  "name": "@graphscope/logger",
  "version": "1.0.0",
  "description": "A winston-based logger tool with multiple output channels including stdout, file and websocket",
  "main": "dist/lib/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/lib/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "start": "concurrently \"tsc --watch -p tsconfig.build.esm.json\" \"tsc --watch -p tsconfig.build.cjs.json\"",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.build.esm.json && echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "build:cjs": "tsc -p tsconfig.build.cjs.json && echo '{\"type\": \"commonjs\"}' > dist/lib/package.json",
    "prepare": "npm run build",
    "lint": "eslint --ext .ts src"
  },
  "keywords": [
    "winston",
    "logger",
    "socket.io",
    "websocket",
    "multi-channel"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "winston": "^3.11.0",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/socket.io-client": "^3.0.0",
    "concurrently": "^7.6.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
