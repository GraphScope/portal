{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/esm",
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*"]
}
